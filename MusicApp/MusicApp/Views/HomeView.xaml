<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MusicApp.Views.HomeView"
    Height="450" Width="800">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="10" VerticalAlignment="Center" Padding="10,0,0,0"/>
		<Button Command="{Binding SearchCommand}" Grid.Row="0" Content="Search" Margin="10"/>
	</Grid>
</UserControl>
